            var Balance = $("#Balance").val();

            var Temp1 = document.getElementById("DDL1").value;

            $.ajax({
                type: "post",
                url: '@Url.Action("InsertUserBalance", "Admin")',
                data: { UserId: Id, BalancePrice: Balance, Temp: Temp1 },
                success: function (data) {

                    location.reload();

                }
            });
