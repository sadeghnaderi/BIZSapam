@model BizSapam.Models.Tbl_User

@{
    Layout = null;
    ViewBag.Title = "Login";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>ورود کاربران</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link href="/favicon.png" rel="shortcut icon" type="image/png">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginForm/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginForm/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginForm/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginForm/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LoginForm/main.css">
    <!--===============================================================================================-->
</head>
<body>
    @using (Html.BeginForm("CheckUser", "Home"))
    {
        <div class="limiter">
            <div class="container-login100" style="background-image: url('../../images/LoginForm/img-01.jpg');">
                <div class="wrap-login100 p-t-190 p-b-30">
                    <form class="login100-form validate-form">
                        <div class="login100-form-avatar">
                            <img src="~/images/LoginForm/avatar-01.jpg" alt="AVATAR">
                        </div>

                        <span class="login100-form-title p-t-20 p-b-45" style="font-family:IRANSans;">
                            ورود کاربران
                        </span>

                        <div class="wrap-input100 validate-input m-b-10" data-validate="Username is required">
                            @*<input class="input100" type="text" name="username" placeholder="Username">*@
                            @Html.TextBoxFor(m => m.Username, new { @class = "input100", @placeholder = "username", style = "font-size:larger;" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-user"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                            @*<input class="input100" type="password" name="pass" placeholder="Password">*@
                            @Html.TextBoxFor(m => m.Password, new { @class = "input100", @placeholder = "password", type = "password", style = "font-size:larger;" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>

                        <div class="container-login100-form-btn p-t-10">
                            <button class="login100-form-btn" style="font-family:IRANSans;">
                                ورود
                            </button>
                        </div>

                        <div class="text-center w-full p-t-25 p-b-230">

                            <br />
                            <p style='color: white; font-size:larger; font-family:IRANSans;'>@ViewBag.Error</p>
                        </div>

                        <div class="text-center w-full">
                            <a class="txt1" href="#">

                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }



    <!--===============================================================================================-->
    <script src="~/Scripts/ControlPanel/jquery.3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginForm/popper.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginForm/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/LoginForm/main.js"></script>

</body>
</html>


